#include<iostream>
#include<algorithm> // sort()를 사용하기 위한 namespace
using namespace std;
int main() {
	int n, a, sum;
	sum = 0;
	int min = 0;
	int arr[1000] = { };
	cin >> n;
	for (int i = 1; i <= n; i++) {
		cin >> a;
		arr[i] = a;
	}
	for (int i = 1; i <= n; i++) {
		cout << arr[i] << " ";
	}
	cout << endl;
	cout << endl;
	sort(arr, arr + (n+1)); // sort 정렬 시켜주는 함수
	for (int i = 1; i <= n; i++) {
		cout << arr[i] << " ";
	}
	cout << endl;
	cout << endl;
	for (int i = 1; i <= n; i++) {
		
		arr[i] = arr[i-1] + arr[i];
		sum = sum + arr[i];
	}
	cout << sum << endl;
	

}
